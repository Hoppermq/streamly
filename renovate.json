{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "bump", "pin", "digest"],
      "automerge": true,
      "automergeType": "branch"
    }, {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchDatasources": ["go", "golang-version"],
      "automerge": true
    }
  ]
}
